##---------- Keybindings for bspwm ----------##

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Terminal (termite)
super + Return
	kitty
#sugar-level
ctrl + alt + w
    rofi-sugar-level-tracker


#TO SOCIAL
super + 9    
    bspc desktop -f '^9'

# Floating terminal
super + shift + Return
	kitty -f

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	dmenu_run

# Rofi Network Menu
super + n
	networkmanager_dmenu

# Rofi Menus
super + r
	sh ~/.config/bin/rofi-asroot
super + x
    sh ~/.config/bin/rofi-powermenu
ctrl + alt + p
	flameshot gui
ctrl + alt + j
	/bin/kitty --name=book_finder --start-as=normal --detach -e fuzzy_book
ctrl + alt + b
	sh ~/.config/bin/rofi-bookmark-manager	
ctrl + alt + y
    bash ~/.config/bin/rofi_youtube_menu
ctrl + alt + k
    /bin/kitty --name=book_finder --start-as=normal --detach -e fuzzy_killer

ctrl + alt + e
    bash ~/.config/bin/rofi-shell-command

## dunst applications
ctrl + alt + n 
    bash ~/.config/bin/dunst-todo
##---------- Applications ----------##

# Launch Apps
ctrl + alt + v
